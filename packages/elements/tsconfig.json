{
  "extends": "@vitus-labs/tools-typescript/lib",
  "include": ["src"],
  "exclude": ["node_modules", "__stories__", "lib", "src/__tests__"],
  "compilerOptions": {
    "types": ["@vitus-labs/tools-rollup/global"],
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "preserveSymlinks": false,
    "paths": {
      "~/*": ["src/*"]
    }
  }
}

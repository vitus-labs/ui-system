{
  "name": "@vitus-labs/coolgrid",
  "version": "v0.1.0-experimental.2",
  "license": "MIT",
  "author": "Vit Bokisch <vit@bokisch.cz>",
  "maintainers": [
    "Vit Bokisch <vit@bokisch.cz>"
  ],
  "homepage": "https://vitus-labs.github.io/coolgrid/",
  "description": "Ultra flexible and extensible grid system inspired by Bootstrap grid, based on styled-components",
  "keywords": [
    "grid",
    "react",
    "styled-components",
    "bootstrap",
    "flexible",
    "extensible",
    "coolgrid"
  ],
  "main": "dist/vitus-labs-coolgrid.js",
  "umd:main": "dist/vitus-labs-coolgrid.umd.js",
  "module": "dist/vitus-labs-coolgrid.module.js",
  "browser": {
    "./dist/vitus-labs-coolgrid.js": "./dist/vitus-labs-coolgrid.js",
    "./dist/vitus-labs-coolgrid.module.js": "./dist/vitus-labs-coolgrid.module.js"
  },
  "unpkg": "dist/vitus-labs-coolgrid.umd.min.js",
  "jsnext:main": "dist/vitus-labs-coolgrid.module.js",
  "react-native": "dist/vitus-labs-coolgrid.module.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vitus-labs/coolgrid"
  },
  "bugs": {
    "url": "https://github.com/vitus-labs/coolgrid/issues"
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "yarn clean && babel src -d lib --root-mode upward && cpr lib dist --delete-first && yarn rollup",
    "storybook": "start-storybook -p 6006 -c",
    "storybook:build": "build-storybook -c tools/storybook -o docs/",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "clean": "rm -rf lib dist",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint './src/**/*.js*'",
    "lint:js": "eslint src",
    "lint:ts": "tslint -p ./tsconfig.json \"./src/**/*.ts*\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch",
    "cover": "coveralls < .coverage/lcov.info",
    "rollup": "rollup -c"
  },
  "peerDependencies": {
    "@vitus-labs/core": ">= 0.1 <1",
    "react": ">= 16.7"
  },
  "devDependencies": {
    "@internal/rollup": "*",
    "@vitus-labs/core": "*"
  }
}

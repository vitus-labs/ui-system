{
  "name": "@vitus-labs/core",
  "version": "0.3.1",
  "homepage": "https://github.com/vitus-labs/core#readme",
  "description": "Core and utility functions for vitus-labs packages",
  "author": "Vit Bokisch <vit@bokisch.cz>",
  "maintainers": [
    "Vit Bokisch <vit@bokisch.cz>"
  ],
  "license": "MIT",
  "main": "lib/vitus-labs-core.js",
  "umd:main": "lib/vitus-labs-core.umd.js",
  "module": "lib/vitus-labs-core.module.js",
  "browser": {
    "./lib/vitus-labs-core.js": "./lib/vitus-labs-core.js",
    "./lib/vitus-labs-core.module.js": "./lib/vitus-labs-core.module.js"
  },
  "unpkg": "lib/vitus-labs-core.umd.min.js",
  "jsnext:main": "lib/vitus-labs-core.module.js",
  "react-native": "lib/vitus-labs-core.module.js",
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "rm -rf lib && yarn rollup -c",
    "storybook": "start-storybook -p 6006 -c tools/storybook",
    "storybook:build": "build-storybook -c tools/storybook -o docs/",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint './src/**/*.js*'",
    "lint:js": "eslint src",
    "lint:ts": "tslint -p ./tsconfig.json \"./src/**/*.ts*\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch",
    "cover": "coveralls < .coverage/lcov.info"
  },
  "bugs": {
    "url": "https://github.com/vitus-labs/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitus-labs/core.git"
  },
  "peerDependencies": {
    "react": ">= 16.7",
    "styled-components": ">= 4"
  },
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@vitus-labs/tools-rollup": "*"
  }
}

{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "version": "1.2.2",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"]
    },
    "version": {
      "allowBranch": [
        "main",
        "feature/*",
        "release/*"
      ],
      "exact": true,
      "preid": "alpha"
    }
  }
}

    "coveralls": "^3.0.4",
    "cpr": "^3.0.1",
    "lerna": "^3.20.2",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
